\ProvidesPackage{beamercolorthemeelephant}
\RequirePackage{tumcolors}

\colorlet{highlight}{lightgreen}

\renewcommand{\tumias@slideStyle}{-c}

\setbeamertemplate{background canvas}[vertical shading][top=tumdarkgray,bottom=tumgray]

\setbeamercolor*{palette primary}{fg=white,bg=tumdarkgray}
\setbeamercolor*{palette secondary}{parent=palette primary,fg=tumlightgray}
\setbeamercolor*{palette tertiary}{bg=tumgray,fg=tumlightgray}% fg sets font for navigation
\setbeamercolor*{palette quarternary}{bg=tumgray,fg=tumlightgray!50!tumgray}

\setbeamercolor{alerted text}{fg=orange}
\setbeamercolor{normal text}{fg=white,bg=tumgray}

\setbeamercolor{frametitle}{parent=palette primary}
\setbeamercolor{headline}{parent=palette primary}
\setbeamercolor{titlelike}{parent=palette primary,fg=white}
\setbeamercolor{title}{fg=tumdarkgray,bg=tumlightgray}
\setbeamercolor{title page}{fg=white,bg=tumgray}

\setbeamercolor{block title}{fg=white,bg=tumgray}
\setbeamercolor{block body}{bg=tumlightgray,fg=black}

\setbeamercolor{block title alerted}{fg=orange,bg=tumgray}
\setbeamercolor{block body alerted}{bg=tumlightgray,fg=black}

\setbeamercolor{block title example}{fg=lightgreen,bg=tumgray}
\setbeamercolor{block body example}{bg=tumlightgray,fg=black}

\setbeamercolor{structure}{bg=tumgray,fg=white}

\setbeamercolor{item}{bg=tumdarkgray,fg=white}
\setbeamercolor{subitem}{bg=tumdarkgray,fg=tumlightgray!50}
\setbeamercolor{subsubitem}{bg=tumdarkgray,fg=tumlightgray}

\setbeamercolor{item projected}{bg=white,fg=black}
\setbeamercolor{subitem projected}{bg=tumlightgray!50,fg=black}
\setbeamercolor{subsubitem projected}{bg=tumlightgray,fg=black}

\setbeamercolor{description item}{fg=lightgreen}
\setbeamercolor{description subitem}{fg=lightgreen}
\setbeamercolor{description subsubitem}{fg=lightgreen}


